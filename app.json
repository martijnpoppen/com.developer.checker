      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "martijnpoppen"
      }
    }
  },
  "bugs": {
    "url": "https://community.athom.com/t/app-flowchecker/50986"
  },
  "source": "https://github.com/martijnpoppen/com.athom.flowchecker",
  "homeyCommunityTopicId": 50986,
  "support": "https://community.athom.com/t/app-flowchecker/50986",
  "drivers": [
    {
      "id": "DeveloperChecker",
      "class": "other",
      "platforms": [
        "local"
      ],
      "capabilities": [
        "measure_installs"
      ],
      "name": {
        "en": "Developer Checker",
        "nl": "Developer Checker"
      },
      "images": {
        "xlarge": "drivers/DeveloperChecker/assets/images/xlarge.png",
        "large": "drivers/DeveloperChecker/assets/images/large.png",
        "small": "drivers/DeveloperChecker/assets/images/small.png"
      },
      "pair": [
        {
          "id": "login_homey"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "login_homey",
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "trigger_INSTALL_ADD",
        "title": {
          "en": "App installs increased"
        },
        "tokens": [
          {
            "name": "app",
            "type": "string",
            "title": {
              "en": "APP"
            }
          },
          {
            "name": "id",
            "type": "string",
            "title": {
              "en": "ID"
            }
          },
          {
            "name": "installs",
            "type": "number",
            "title": {
              "en": "Installs"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=DeveloperChecker"
          }
        ]
      },
      {
        "id": "trigger_INSTALL_REMOVE",
        "title": {
          "en": "App installs decreased"
        },
        "tokens": [
          {
            "name": "app",
            "type": "string",
            "title": {
              "en": "APP"
            }
          },
          {
            "name": "id",
            "type": "string",
            "title": {
              "en": "ID"
            }
          },
          {
            "name": "installs",
            "type": "number",
            "title": {
              "en": "Installs"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=DeveloperChecker"
          }
        ]
      }
    ]
  },
  "capabilities": {
    "measure_installs": {
      "type": "number",
      "title": {
        "en": "Total app installs"
      },
      "units": {
        "en": "Installs"
      },
      "insights": true,
      "desc": {
        "en": "Total app installs"
      },
      "chartType": "spline",
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/list-ol.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_installs_changed",
            "title": {
              "en": "Total app installs has changed"
            },
            "tokens": [
              {
                "name": "measure_installs",
                "title": {
                  "en": "Total app installs"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    }
  }
}